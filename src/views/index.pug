extends layout/layout

block variables
	- title = 'Nikita Almanov - Front-End Development'
	- header = true
	- footer = true
	- preloader = true
	- name = 'nikkeyl'

block content
	section.hero.container.flex-align-center.flex-column.fullscreen
		h1.title.title--big.hero__title
			| #[span Front-End] Development
		ul.hero__actions
			li
				a.button.button--full(href='#portfolio')
					| Portfolio
			li
				a.button.button--full(href=`https://t.me/${name}`)
					| Order a Website
	section.about-me
		.about-me__inner
			.container.about-me__container
				.about-me__body.padding-block
					h2.title.about-me__title.margin-bottom-30
						| Who Am I?
					.text
						p
							| I am a young Front-End Developer with two years of experience,
							| not inferior to more experienced colleagues in terms of code
							| speed and quality. My focus is #[strong clean and scalable code]
							| that can effectively #[strong solve business problems].
							| I have a good understanding of business requirements and
							| strive for simple and robust architectural solutions.
						p
							| You can view my projects #[a.link(href='#portfolio') here].
						p
							| While working on projects, I apply neural networks to optimize
							| routine tasks, improving efficiency and focusing on more
							| #[strong business-critical] aspects of development.
							| My experience in #[strong building CSS libraries] emphasizes
							| my ability to create structured and flexible styles for a
							| variety of projects.
						p
							| You can view my technology stack #[a.link(href='#tools') here].
						p
							| In addition to Front-End Development experience, I have an
							| understanding and experience in #[span Continuous Integration (CI)]
							| and #[span Continuous Deployment (CD)].
							| My projects are not only based on clean and scalable code,
							| but also integrated into the continuous development process.
						p
							| My understanding of #[span DevOps] principles and #[span CI/CD]
							| skills not only add to my technical arsenal, but also reflect a
							| passion for building not only a quality but also an efficient
							| software product. By managing each stage of development, I am
							| confident in ensuring high code standards, stable processes,
							| and accelerated development.
		.about-me__image
			img(
				src=`@img/about/${name}.jpg`
				alt='Nikita Almanov'
				loading='lazy'
			)
	.tools.padding-block#tools
		h2.title.margin-bottom-30
			| Tools
		each tool in tools.tools
			p.sr-only
				=tool.name
		.marquee-wrapper
			.marquee.gap-20
				each tool in tools.tools
					div(
						class=[
							'tools__icon',
							!tool.studied ? 'not-studied' : ''
						]
						data-tippy-content=tool.name
					)
						img(
							src=tool.icon
							loading='lazy'
							alt=tool.name
						)
			.marquee.gap-20(aria-hidden='true')
				each tool in tools.tools
					div(
						class=[
							'tools__icon',
							!tool.studied ? 'not-studied' : ''
						]
						data-tippy-content=tool.name
					)
						img(
							src=tool.icon
							loading='lazy'
							alt=tool.name
						)

	section.portfolio.container.padding-block#portfolio
		h2.title.margin-bottom-30
			| Portfolio
		.grid.gap-20
			each card in projects.cards
				article.project-card.border-radius-10
					a.project-card__image.overflow-hidden(href=card.linkSite)
						img.tr-scale(
							src=card.img
							loading='lazy'
							alt=card.name
						)
					.project-card__body.padding-12
						h3.card-title.project-card__title
							a(href=card.linkSite)
								=card.name
						a.button.project-card__button(href=card.linkSite)
							| View

	section.reviews.padding-block
		.container
			h2.title.margin-bottom-30
				| Reviews
			.swiper.reviews__slider.padding-12
				.swiper-wrapper.margin-bottom-30
					each review in reviews.reviews
						.swiper-slide
							article(class=[
								'review',
								review.class,
								'border-radius-10'
							])
								.review__info.padding-12.flex-align-center
									.review__image.overflow-hidden.border-radius-50
										img(
											src=review.img
											loading='lazy'
											alt=review.name
										)
									h3.review-name.review__name
										=review.name
								.text.review__text.padding-12
									| !{review.text}

				.swiper-pagination.reviews__pagination
	section.container.padding-block#questions
		h2.title.margin-bottom-30
			| Q&A
			span.sr-only
				| Questions and answers
		.grid.gap-20(
			data-spoilers
			data-one-spoiler
		)
			each spoiler in spoilers.spoilers
				details.spoiler.border-radius-10
					summary.spoiler-trigger.spoiler__trigger.padding-12.flex-align-center.gap-20(
						data-spoiler
						data-spoiler-close
					)
						strong=spoiler.title
						span
					.text.spoiler__content.padding-12
						| !{spoiler.content}
					.sr-only
						| !{spoiler.content}
